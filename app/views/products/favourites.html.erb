<%=@all%>
<br>
<% @products_datum.each do |pd|%>
    <%= pd.product.name%><br>
    <%= pd.price%><br>
    <%= pd.promotional_price%><br>
    <%if pd.color%>
        <%= pd.color.name%><br>
    <%end%>
    <%if pd.photos!=[]%>
        <%=image_tag(pd.photos[0].img(:original) ,class:"pattern")%>
    <%end%>
<%end%>
<main role="main" class="responsive fill">
    <div class="wrapper">

        <nav class="breadcrumbs">
            <ul>
                <li>
                    <a href="#">YourHM.com</a>
                </li>
            </ul>
        </nav>

        <div class="wrapper">
            <h1 class="favorite-heading">ЛЮБИМЫЕ МОДЕЛИ</h1>
            <div  ng-controller="FavoritesContextController" ng-cloak>
                <div class="responsive status-message is-open secondary favorites-message">
                    <div class="message ">
                        Сохраните эти товары бессрочно и выполняйте управление при помощи любого устройства посредством
                        <a href="#" class="link">входа в уже существующую учетную запись,</a>
                        или
                        <a href="#" class="link">создания новой учетной записи.</a>
                    </div>
                </div>
                <div class="favorite-items-quantity" >

                </div>
                <ul class="product-detail-list responsive favorite-list js-favorite-list" id="favouritesPage-items">
                    <% @products_datum.each_with_index do |pd, k|%>
                        <li class="product-detail-list-item">
                            <!-- Wishlist item -->
                            <div class="product-detail-list-item-image-wrapper">
                                <div class="wrapper-inner">
                                    <a href="#" class="product-detail-list-item-image">
                                        <!-- <div class="marker icon-club-price"></div> -->
                                        <!-- <img width="56" height="56" class="marker" alt="" src="" title="" /> -->
                                        <!-- <div class="marker" style="width: 56px; height: 56px;">
                                            <span class="marker-text"></span>
                                            <span class="marker-text"></span>
                                        </div> -->
                                        <!-- <img class="product-detail-list-item-image-image" src="" alt="" title="" /> -->
                                        <%if pd.photos!=[]%>
                                            <%=image_tag(pd.photos[0].img(:original) ,class:"product-detail-list-item-image-image")%>
                                        <%end%>
                                    </a>
                                </div>
                            </div>

                            <div class="product-detail-list-item-details">

                               <!--  <div class="product-detail-list-item-price-info">
                                    <p class="product-detail-list-item-total-price">Распродано</p>
                                </div> -->

                                <!-- <div ng-repeat="marker in entry.productMarkers">
                                    <img alt="" class="label" src="" />
                                </div> -->

                                <h3 class="sub-sub-heading"><%= pd.product.name%><br></h3>

                                <div>
                                    <p class="product-detail-price">
                                        <span class="original-price"><%= pd.price%></span>
                                    </p>
                                </div>
                                <p class="product-detail-selection"></p>
                                <dl class="product-detail-list-item-details-list">
                                    <dt>№ арт.:</dt>
                                    <dd><%= pd.article%></dd>
                                    <dt>Цвет:</dt>
                                    <dd>
                                        <%if pd.color%>
                                            <%= pd.color.name%><br>
                                        <%end%>
                                    </dd>
                                </dl>
                            </div>
                            <div class="product-detail-list-item-actions favorite-list-actions">
                                <button class="button secondary icon icon-trash" type="button" title="Удалить из раздела «Избранное»" data-id="<%= pd.id %>">Удалить из раздела «Избранное»</button>
                                <label class="product-detail-list-item-actions-label" for="favorite-options-<%= k %>"></label>
                                <div class="favorite-add-to-bag icon-add-to-bag">
                                    <select class="add-to-bag" name="favorite-add-to-bag-options-<%= k %>" id="favorite-options-" data-validation="false"
                                        title=ДОБАВИТЬ В КОРЗИНУ>
                                        <option value="">Выбрать размер</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                        </li>
                    <% end %>
                    <!-- /Wishlist item --> 
                </ul>
                <% if @products_datum == [] %>
                <div>
                    <section class="segment favorites-empty">
                        <h3 class="heading icon-favorites">Сохранить ваши избранные товары</h3>
                        <p class="text">
                            Хотите сохранить понравившиеся товары? Просто нажмите на значок в виде сердца на товаре, после чего этот товар появится здесь.
                        </p>
                        <a class="button" href="home.html">ПРОСМОТРЕТЬ СЕЙЧАС</a>
                    </section>
                </div>
                <% end %>
            </div>

            <div class="hidden modal-content fadeInModal" style="margin-top: 91.5px;" id="error-popup">
                <button class="modalclose icon-close-black"></button>
                <h1 class="sticky heading"></h1>
                <div class="modal-wrapper" style="max-height: 140px;">
                    <div aria-hidden="false" class="modal-content">
                        <div class="modal-text">
                            <p class="text"></p>
                        </div>
                        <div class="sticky button-group">
                            <button class="modalclose button">OK</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
  $(document).ready(function(){
    $('.secondary').click(function(){
      var remove_id = $(this).attr('data-id');
      $(this).parent().parent().remove();
      $.get("/removetofavorite/" + remove_id, function(data) {
        console.log(data);
      });
    });
  });
</script>