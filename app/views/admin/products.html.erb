
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Все товары</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered table-hover dataTables-example">
<thead>
<tr>
    <th>id</th>
    <th>Название</th>
    <th>Основная картинка</th>
    <th>Альтернативная картинка</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</thead>
<tbody>
<% @products.each do | product | %>
<tr class="gradeX">
    <td><%=product.id %></td>
    <td><%=product.name %></td>
    <td><%=image_tag(product.img(:original) , style: 'max-height:100px;max-width:100px;')%></td>
    <td><%=image_tag(product.img_alt(:original) , style: 'max-height:100px;max-width:100px;')%></td>
    <td><%= link_to 'Обновить', admin_product_edit_path(product) %></td>
    <td class="center"><%= link_to 'Удалить', admin_product_destroy_path(product) , :method => 'delete', data: { confirm: 'Точно?' } %></td>
</tr>
<% end %>
</tbody>
<tfoot>
<tr>
    <th>id</th>
    <th>Название</th>
    <th>Основная картинка</th>
    <th>Альтернативная картинка</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</tfoot>
</table>
</div>
</div>
</div>
</div>

</div>
