

<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Все заказы</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered table-hover dataTables-example">
<thead>
<tr>
    <th>id</th>
    <th>Адресс</th>
    <th>Клиент</th>
    <th>Сумма</th>
    <th>Статус</th>
    <th>Дата заказа</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</thead>
<tbody>
<% @orders.each do | order | %>
<tr class="gradeX">
    <td><%= order.id %></td>
    <td><%= order.address %></td>
    <td>
    	<p><a href="mailto:<%= order.user.email %>"><%= order.user.email %></a><br>
    	<%= order.user.first_name%> <%=order.user.second_name%> <%=order.user.father%><br>
    	<a href="tel:<%= order.user.tel %>"><%= order.user.tel %></a></p>
    </td>
    <td><%= order.sum %></td>
    <td><%= order.status %></td>
    <td><%= order.created_at.to_s(:db) %></td>
    <td><%= link_to 'Обновить', admin_order_edit_path(order) %></td>
    <td class="center"><%= link_to 'Удалить', admin_order_destroy_path(order) , :method => 'delete', data: { confirm: 'Точно?' } %></td>
</tr>
<% end %>
</tbody>
<tfoot>
<tr>
    <th>id</th>
    <th>Адресс</th>
    <th>Клиент</th>
    <th>Сумма</th>
    <th>Статус</th>
    <th>Дата заказа</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</tfoot>
</table>
</div>
</div>
</div>
</div>

</div>
