
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Все банера</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered table-hover dataTables-example">
<thead>
<tr>
    <th>id</th>
    <th>Имя</th>
    <th>Текст</th>
    <th>Cсылка</th>
    <th>Порядок</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</thead>
<tbody>
<% @pages.each do | page | %>
<tr class="gradeX">
    <td><%=page.id %></td>
    <td><%=page.name %></td>
    <td><%=page.content.html_safe %></td>
    <td><%=page.link %></td>
    <td><%=page.order %></td>
    <td><%= link_to 'Обновить', admin_page_edit_path(page) %></td>
    <td class="center"><%= link_to 'Удалить', admin_page_destroy_path(page) , :method => 'delete', data: { confirm: 'Точно?' } %></td>
</tr>
<% end %>
</tbody>
<tfoot>
<tr>
    <th>id</th>
    <th>id</th>
    <th>Имя</th>
    <th>Текст</th>
    <th>Cсылка</th>
    <th>Порядок</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</tfoot>
</table>
</div>
</div>
</div>
</div>

</div>
