<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Все цвета</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered table-hover dataTables-example">
<thead>
<tr>
    <th>id</th>
    <th>Имя</th>
    <th>Отец</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</thead>
<tbody>
<% @categories.each do | category | %>
<tr class="gradeX">
    <td><%=category.id %></td>
    <td><%=category.name %></td>
    <td>
    	<%if category.parent %>
    		<%=category.parent.name%>
    	<%end%>
    </td>
    <td><%= link_to 'Обновить', admin_category_edit_path(category) %></td>
    <td><%= link_to 'Удалить', admin_category_destroy_path(category) , :method => 'delete', data: { confirm: 'Точно?' } %></td>
</tr>
<% end %>
</tbody>
<tfoot>
<tr>
    <th>id</th>
    <th>Имя</th>
    <th>Отец</th>
    <th>Обновить</th>
    <th>Удалить</th>
</tr>
</tfoot>
</table>
</div>
</div>
</div>
</div>

</div>

