
<div class="row">
    <div class="col-lg-5">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Создание нового размера</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <%= semantic_form_for @size, :url => admin_size_create_path(@size) , :html => { :class => "form-horizontal"} do |f| %>
                    <p>Введите пустые поля</p>
                    <div class="form-group">
                    <%= f.label  :size , "Размер" , class: "col-lg-2 control-label"%>
                        <div class="col-lg-10"><%= f.text_field :size, class: 'form-control' %><span class="help-block m-b-none">Введите размер</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                          <%= f.submit  "Создать размер" , :class => "btn btn-sm btn-primary"  %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>